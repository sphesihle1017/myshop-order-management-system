@model IEnumerable<MyShop.Models.Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-tags me-2"></i>Categories
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Add New Category
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Category Name</th>
                        <th>Products Count</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.CategoryId</td>
                            <td>
                                <strong>@category.CategoryName</strong>
                            </td>
                            <td>
                                @if (category.Products != null)
                                {
                                    <span class="badge bg-info">@category.Products.Count</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">0</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@category.CategoryId"
                                       class="btn btn-outline-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@category.CategoryId"
                                       class="btn btn-outline-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@category.CategoryId"
                                       class="btn btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                    @if (category.Products != null && category.Products.Any())
                                    {
                                        <a asp-action="CategoryProducts" asp-route-id="@category.CategoryId"
                                           class="btn btn-outline-primary" title="View Products">
                                            <i class="bi bi-box"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Card View (Alternative) -->
        <div class="row mt-5">
            <div class="col-12">
                <h4 class="mb-3">Category Cards</h4>
            </div>
            @foreach (var category in Model)
            {
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="bi bi-tag" style="font-size: 3rem; color: #6c757d;"></i>
                            </div>
                            <h5 class="card-title">@category.CategoryName</h5>
                            <p class="card-text">
                                @if (category.Products != null)
                                {
                                    <span class="badge bg-primary">@category.Products.Count products</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No products</span>
                                }
                            </p>
                            <div class="mt-3">
                                <a asp-action="Edit" asp-route-id="@category.CategoryId"
                                   class="btn btn-sm btn-outline-primary me-1">Edit</a>
                                <a asp-action="Delete" asp-route-id="@category.CategoryId"
                                   class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <div class="mb-3">
                <i class="bi bi-tags text-muted" style="font-size: 4rem;"></i>
            </div>
            <h4>No categories found</h4>
            <p class="mb-4">Get started by adding your first category</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Create First Category
            </a>
        </div>
    }
</div>

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
            transform: scale(1.002);
            transition: all 0.2s ease;
        }

        .btn-group .btn {
            border-radius: 0.25rem !important;
        }

        .card {
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }
    </style>
}