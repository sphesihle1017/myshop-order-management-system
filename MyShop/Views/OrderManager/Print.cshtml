@model MyShop.Models.Checkout

@{
    ViewData["Title"] = "Print Order";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invoice #@Model.OrderId - MyShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background: #fff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
        }

        .invoice-header {
            border-bottom: 3px solid #4e73df;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .invoice-title {
            color: #4e73df;
            font-weight: 700;
        }

        .company-info {
            color: #6c757d;
        }

        .customer-info {
            background: #f8f9fc;
            padding: 20px;
            border-radius: 5px;
            border-left: 4px solid #4e73df;
        }

        .table thead th {
            border-bottom: 2px solid #4e73df;
            color: #4e73df;
            font-weight: 700;
        }

        .total-row {
            background-color: #f8f9fc;
            font-weight: 700;
        }

        .badge {
            font-size: 0.9em;
            padding: 5px 10px;
        }

        .print-only {
            display: block;
        }
        @@media print {
            .no-print

        {
            display: none !important;
        }

        .print-only {
            display: block !important;
        }

        body {
            font-size: 12px;
        }

        .container {
            max-width: 100%;
            padding: 0;
        }

        .card {
            border: none !important;
            box-shadow: none !important;
        }

        .table {
            border-collapse: collapse;
        }

            .table th, .table td {
                border: 1px solid #dee2e6 !important;
            }

        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Print Controls -->
        <div class="no-print mb-4">
            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                <h5 class="mb-0">Print Preview</h5>
                <div>
                    <button onclick="window.print()" class="btn btn-primary mr-2">
                        <i class="fas fa-print"></i> Print
                    </button>
                    <button onclick="window.close()" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Close
                    </button>
                </div>
            </div>
        </div>

        <!-- Invoice Content -->
        <div class="card shadow">
            <div class="card-body p-4">
                <!-- Header -->
                <div class="row invoice-header">
                    <div class="col-md-6">
                        <h1 class="invoice-title">INVOICE</h1>
                        <div class="company-info">
                            <h4 class="font-weight-bold">MyShop</h4>
                            <p class="mb-1">123 Business Street</p>
                            <p class="mb-1">Cape Town, 8000</p>
                            <p class="mb-1">South Africa</p>
                            <p class="mb-0">contact@myshop.co.za</p>
                        </div>
                    </div>
                    <div class="col-md-6 text-right">
                        <h3 class="font-weight-bold">#@Model.OrderId</h3>
                        <p class="mb-1"><strong>Invoice Date:</strong> @DateTime.Now.ToString("MMMM dd, yyyy")</p>
                        <p class="mb-1"><strong>Order Date:</strong> @Model.OrderDate.ToString("MMMM dd, yyyy")</p>
                        <p class="mb-1">
                            <strong>Status:</strong>
                            <span class="badge badge-@GetStatusBadgeColor(Model.OrderStatus)">
                                @Model.OrderStatus
                            </span>
                        </p>
                        <p class="mb-0">
                            <strong>Payment:</strong>
                            <span class="badge badge-@GetPaymentBadgeColor(Model.PaymentStatus)">
                                @Model.PaymentStatus
                            </span>
                        </p>
                    </div>
                </div>

                <!-- Customer & Shipping -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="customer-info mb-3">
                            <h5 class="font-weight-bold text-primary">BILL TO:</h5>
                            <h6 class="font-weight-bold">@Model.FirstName @Model.LastName</h6>
                            <p class="mb-1">@Model.Email</p>
                            <p class="mb-1">@Model.Phone</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="customer-info mb-3">
                            <h5 class="font-weight-bold text-primary">SHIP TO:</h5>
                            <p class="mb-1">@Model.FirstName @Model.LastName</p>
                            <p class="mb-1">@Model.Address</p>
                            <p class="mb-1">@Model.City, @Model.PostalCode</p>
                            <p class="mb-1">@Model.Country</p>
                        </div>
                    </div>
                </div>

                <!-- Order Items -->
                <div class="table-responsive mb-4">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th width="50">#</th>
                                <th>Description</th>
                                <th width="100" class="text-center">Quantity</th>
                                <th width="120" class="text-right">Unit Price</th>
                                <th width="120" class="text-right">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.OrderItems != null)
                            {
                                var counter = 1;
                                foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@counter</td>
                                        <td>
                                            <strong>@item.ProductName</strong><br>
                                            <small>Product ID: @item.ProductId</small>
                                        </td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-right">@item.Price.ToString("C")</td>
                                        <td class="text-right">@item.Total.ToString("C")</td>
                                    </tr>
                                    counter++;
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary -->
                <div class="row">
                    <div class="col-md-6">
                        @if (!string.IsNullOrEmpty(Model.AdminNotes))
                        {
                            <div class="alert alert-light border">
                                <h6 class="font-weight-bold">Notes:</h6>
                                @Model.AdminNotes
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.TrackingNumber))
                        {
                            <div class="alert alert-info">
                                <h6 class="font-weight-bold">Tracking Information:</h6>
                                <p class="mb-0">Tracking #: @Model.TrackingNumber</p>
                                @if (!string.IsNullOrEmpty(Model.ShippingCarrier))
                                {
                                    <p class="mb-0">Carrier: @Model.ShippingCarrier</p>
                                }
                            </div>
                        }
                    </div>
                    <div class="col-md-6">
                        <table class="table table-bordered">
                            <tr>
                                <td><strong>Subtotal:</strong></td>
                                <td class="text-right">@Model.Subtotal.ToString("C")</td>
                            </tr>
                            @if (Model.ShippingCost > 0)
                            {
                                <tr>
                                    <td><strong>Shipping:</strong></td>
                                    <td class="text-right">@Model.ShippingCost.ToString("C")</td>
                                </tr>
                            }
                            @if (Model.Tax > 0)
                            {
                                <tr>
                                    <td><strong>Tax:</strong></td>
                                    <td class="text-right">@Model.Tax.ToString("C")</td>
                                </tr>
                            }
                            @if (Model.Discount > 0)
                            {
                                <tr>
                                    <td><strong>Discount:</strong></td>
                                    <td class="text-right text-danger">-@Model.Discount.ToString("C")</td>
                                </tr>
                            }
                            <tr class="total-row">
                                <td><strong>TOTAL:</strong></td>
                                <td class="text-right font-weight-bold text-success">@Model.Total.ToString("C")</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- Footer -->
                <div class="row mt-5 pt-4 border-top">
                    <div class="col-md-12 text-center">
                        <p class="text-muted">
                            <strong>Thank you for your business!</strong><br>
                            This is a computer-generated invoice. No signature required.
                        </p>
                        <p class="text-muted small">
                            Invoice generated on @DateTime.Now.ToString("MMMM dd, yyyy HH:mm") |
                            Order #@Model.OrderId
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Auto-print option
        @if (Context.Request.Query["autoprint"] == "true")
        {
                <text>
                window.onload = function() {
                    window.print();
                }
                </text>
        }
    </script>
</body>
</html>

@functions {
    private string GetStatusBadgeColor(string status)
    {
        return status switch
        {
            "Pending" => "warning",
            "Processing" => "info",
            "Shipped" => "primary",
            "Delivered" => "success",
            "Cancelled" => "danger",
            "Refunded" => "secondary",
            "On Hold" => "dark",
            _ => "secondary"
        };
    }

    private string GetPaymentBadgeColor(string paymentStatus)
    {
        return paymentStatus switch
        {
            "Paid" => "success",
            "Pending" => "warning",
            "Failed" => "danger",
            "Refunded" => "info",
            "Partially Refunded" => "info",
            _ => "secondary"
        };
    }
}