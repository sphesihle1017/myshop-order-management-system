@model MyShop.Models.Checkout

@{
    ViewData["Title"] = "Delete Order";
    ViewData["ActivePage"] = "Orders";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 text-danger">
            <i class="fas fa-exclamation-triangle mr-2"></i>Delete Order
        </h1>
        <div>
            <a href="@Url.Action("Details", new { id = Model.OrderId })" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Details
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow border-danger">
                <div class="card-header py-3 bg-danger text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-trash-alt mr-2"></i>Confirm Deletion
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-circle"></i> Warning!
                        </h5>
                        <p class="mb-0">
                            You are about to delete order <strong>#@Model.OrderId</strong>. This action cannot be undone.
                            All order items and related information will be permanently deleted.
                        </p>
                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Order Summary</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Order ID:</strong> #@Model.OrderId</p>
                                    <p><strong>Customer:</strong> @Model.FirstName @Model.LastName</p>
                                    <p><strong>Email:</strong> @Model.Email</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("MMMM dd, yyyy")</p>
                                    <p><strong>Total Amount:</strong> @Model.Total.ToString("C")</p>
                                    <p>
                                        <strong>Status:</strong>
                                        <span class="badge badge-@GetStatusBadgeColor(Model.OrderStatus)">
                                            @Model.OrderStatus
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.OrderItems != null && Model.OrderItems.Any())
                    {
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">Items to be Deleted (@Model.OrderItems.Count items)</h5>
                                <ul class="list-group">
                                    @foreach (var item in Model.OrderItems.Take(5))
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            @item.ProductName
                                            <span class="badge badge-primary badge-pill">@item.Quantity x @item.Price.ToString("C")</span>
                                        </li>
                                    }
                                    @if (Model.OrderItems.Count > 5)
                                    {
                                        <li class="list-group-item text-center text-muted">
                                            ... and @(Model.OrderItems.Count - 5) more items
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <div class="form-group">
                            <label for="confirmationText" class="font-weight-bold">
                                Type "DELETE" to confirm:
                            </label>
                            <input type="text" id="confirmationText" class="form-control"
                                   placeholder="Type DELETE here" required
                                   oninput="checkConfirmation(this.value)">
                            <small class="form-text text-muted">
                                This is required to prevent accidental deletion.
                            </small>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Details", new { id = Model.OrderId })" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" id="deleteButton" class="btn btn-danger" disabled>
                                <i class="fas fa-trash-alt"></i> Delete Order Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function checkConfirmation(value) {
            const deleteButton = document.getElementById('deleteButton');
            deleteButton.disabled = value.toUpperCase() !== 'DELETE';
        }
    </script>
}

@functions {
    private string GetStatusBadgeColor(string status)
    {
        return status switch
        {
            "Pending" => "warning",
            "Processing" => "info",
            "Shipped" => "primary",
            "Delivered" => "success",
            "Cancelled" => "danger",
            "Refunded" => "secondary",
            "On Hold" => "dark",
            _ => "secondary"
        };
    }
}