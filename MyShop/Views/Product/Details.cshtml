@model MyShop.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="bi bi-info-circle me-2"></i>Product Details
                        </h3>
                        <div>
                            <a asp-action="Index" class="btn btn-outline-light btn-sm me-1">
                                <i class="bi bi-list"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-light btn-sm me-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Product Image -->
                        <div class="col-md-5 mb-4 mb-md-0">
                            <div class="border rounded p-3 text-center bg-light">
                                @if (!string.IsNullOrEmpty(Model.ImageFileName))
                                {
                                    <img src="~/images/products/@Model.ImageFileName"
                                         class="img-fluid rounded"
                                         style="max-height: 300px;"
                                         alt="@Model.Name" />
                                }
                                else
                                {
                                    <div class="text-muted py-5">
                                        <i class="bi bi-image" style="font-size: 5rem;"></i>
                                        <p class="mt-2">No image available</p>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Product Details -->
                        <div class="col-md-7">
                            <h4 class="mb-3">@Model.Name</h4>

                            <dl class="row">
                                <dt class="col-sm-4">Price:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-success fs-6">R @Model.Price.ToString("0.00")</span>
                                </dd>

                                <dt class="col-sm-4">Category:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-secondary">@Model.Category?.CategoryName</span>
                                </dd>

                                @if (!string.IsNullOrEmpty(Model.Size))
                                {
                                    <dt class="col-sm-4">Size:</dt>
                                    <dd class="col-sm-8">
                                        <span class="badge bg-info">@Model.Size</span>
                                    </dd>
                                }

                                <dt class="col-sm-4">Stock Quantity:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-@Model.StockStatusColor">@Model.StockQuantity units</span>
                                    @if (Model.IsLowStock)
                                    {
                                        <small class="text-warning d-block">
                                            <i class="bi bi-exclamation-triangle"></i>
                                            Low stock alert (threshold: @Model.LowStockThreshold)
                                        </small>
                                    }
                                </dd>

                                <dt class="col-sm-4">Description:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Description))
                                    {
                                        <p>@Model.Description</p>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No description provided</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                        @(Model.IsActive ? "Active" : "Inactive")
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Product ID:</dt>
                                <dd class="col-sm-8">
                                    <code>#@Model.ProductId</code>
                                </dd>
                            </dl>

                            <div class="mt-4 pt-3 border-top">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="bi bi-arrow-left me-1"></i>Back to List
                                    </a>
                                    <div>
                                        <a asp-action="AdjustStock" asp-route-id="@Model.ProductId"
                                           class="btn btn-primary me-2">
                                            <i class="bi bi-plus-slash-minus me-1"></i>Adjust Stock
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@Model.ProductId"
                                           class="btn btn-warning me-2">
                                            <i class="bi bi-pencil me-1"></i>Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@Model.ProductId"
                                           class="btn btn-danger">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>