@model MyShop.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Delete Product
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-octagon-fill me-2"></i>
                            Warning: This action cannot be undone!
                        </h5>
                        <p class="mb-0">Are you sure you want to permanently delete this product?</p>
                    </div>

                    <!-- Product Details Card -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title text-danger">Product Details</h5>
                            <hr />

                            <!-- Product Image -->
                            @if (!string.IsNullOrEmpty(Model.ImageFileName))
                            {
                                <div class="text-center mb-3">
                                    <img src="~/images/products/@Model.ImageFileName"
                                         class="img-fluid rounded"
                                         style="max-height: 150px;"
                                         alt="@Model.Name" />
                                </div>
                            }

                            <dl class="row">
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Price:</dt>
                                <dd class="col-sm-8">R @Model.Price.ToString("0.00")</dd>

                                <dt class="col-sm-4">Category:</dt>
                                <dd class="col-sm-8">@Model.Category?.CategoryName</dd>

                                @if (!string.IsNullOrEmpty(Model.Size))
                                {
                                    <dt class="col-sm-4">Size:</dt>
                                    <dd class="col-sm-8">@Model.Size</dd>
                                }

                                <dt class="col-sm-4">Stock:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-@Model.StockStatusColor">@Model.StockQuantity units</span>
                                </dd>

                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <dt class="col-sm-4">Description:</dt>
                                    <dd class="col-sm-8">@Model.Description</dd>
                                }
                            </dl>
                        </div>
                    </div>

                    <!-- Delete Form -->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ProductId" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirmDelete()">
                                <i class="bi bi-trash-fill me-1"></i>Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm(' Are you absolutely sure you want to delete this product?\n\nThis action will:\n• Permanently delete the product\n• Remove the associated image\n• Delete all stock records\n• This cannot be undone!');
        }

        // Double confirmation on form submit
        document.querySelector('form').addEventListener('submit', function(e) {
            const btn = this.querySelector('button[type="submit"]');
            btn.innerHTML = '<i class="bi bi-trash-fill me-1"></i>Deleting...';
            btn.disabled = true;
        });
    </script>
}