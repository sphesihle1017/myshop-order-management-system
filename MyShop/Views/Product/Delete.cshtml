@model MyShop.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<h4>Are you sure you want to delete this product?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.StockQuantity</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.CategoryName</dd>

        </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-danger mb-2">Delete Permanently</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>


    <form asp-action="SoftDelete" method="post" style="display:inline" >
        <input type="hidden" name="id" value="@Model.ProductId" />
        <button type="submit" class="btn btn-warning btn-sm">Soft Delete</button>
    </form>

    

</div>