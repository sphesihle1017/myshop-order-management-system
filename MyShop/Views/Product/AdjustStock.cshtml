@model MyShop.Models.Product
@{
    ViewData["Title"] = "Adjust Stock";
    var currentStock = Model.StockQuantity;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-plus-slash-minus me-2"></i>Adjust Stock
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Product Info -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">@Model.Name</h5>
                            <div class="row">
                                <div class="col-6">
                                    <p class="mb-1 small text-muted">Current Stock</p>
                                    <h4 class="text-@Model.StockStatusColor">@currentStock</h4>
                                </div>
                                <div class="col-6">
                                    <p class="mb-1 small text-muted">Low Stock Threshold</p>
                                    <h4>@Model.LowStockThreshold</h4>
                                </div>
                            </div>
                            @if (Model.IsLowStock)
                            {
                                <div class="alert alert-warning p-2 mt-2 small mb-0">
                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                    Low stock alert! Reorder soon.
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Adjustment Form -->
                    <form asp-action="AdjustStock" method="post" id="adjustForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.ProductId" />

                        <!-- Action Selection -->
                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Select Action</label>
                            <div class="btn-group w-100" role="group">
                                <input type="radio" class="btn-check" name="actionType" id="add" value="add" checked>
                                <label class="btn btn-outline-success" for="add">
                                    <i class="bi bi-plus-circle me-1"></i>Add Stock
                                </label>

                                <input type="radio" class="btn-check" name="actionType" id="remove" value="remove">
                                <label class="btn btn-outline-warning" for="remove">
                                    <i class="bi bi-dash-circle me-1"></i>Remove Stock
                                </label>

                                <input type="radio" class="btn-check" name="actionType" id="set" value="set">
                                <label class="btn btn-outline-info" for="set">
                                    <i class="bi bi-arrow-clockwise me-1"></i>Set Stock
                                </label>
                            </div>
                        </div>

                        <!-- Quantity Input -->
                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Quantity</label>
                            <input type="number" name="quantity" class="form-control"
                                   min="1" value="1" required
                                   id="quantityInput" />
                            <small class="form-text text-muted">
                                Enter the quantity to add, remove, or set
                            </small>
                        </div>

                        <!-- Preview -->
                        <div class="card mb-4" id="previewCard">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">Adjustment Preview</h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-1">Current Stock: <strong>@currentStock</strong> units</p>
                                <p class="mb-1" id="previewAction"></p>
                                <p class="mb-0" id="previewResult"></p>
                                <div id="warningMessage" class="text-danger small mt-2" style="display: none;"></div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="form-group mt-4">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle me-1"></i>Confirm Adjustment
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const currentStock = @currentStock;
        const quantityInput = document.getElementById('quantityInput');
        const previewAction = document.getElementById('previewAction');
        const previewResult = document.getElementById('previewResult');
        const warningMessage = document.getElementById('warningMessage');

        function updatePreview() {
            const actionType = document.querySelector('input[name="actionType"]:checked').value;
            const quantity = parseInt(quantityInput.value) || 0;

            let newStock = currentStock;
            let actionText = '';
            let warning = '';

            switch(actionType) {
                case 'add':
                    newStock = currentStock + quantity;
                    actionText = `<strong>Adding ${quantity}</strong> units to stock`;
                    break;
                case 'remove':
                    newStock = currentStock - quantity;
                    actionText = `<strong>Removing ${quantity}</strong> units from stock`;
                    if (newStock < 0) {
                        warning = '⚠️ Cannot remove more stock than available!';
                        newStock = 'Invalid (Negative)';
                    }
                    break;
                case 'set':
                    newStock = quantity;
                    actionText = `<strong>Setting stock to ${quantity}</strong> units`;
                    if (quantity < 0) {
                        warning = '⚠️ Stock cannot be negative!';
                        newStock = 'Invalid';
                    }
                    break;
            }

            previewAction.innerHTML = actionText;
            previewResult.innerHTML = `New stock will be: <strong>${newStock}</strong> units`;

            // Show/hide warning
            if (warning) {
                warningMessage.innerHTML = warning;
                warningMessage.style.display = 'block';
                previewResult.innerHTML = `New stock will be: <span class="text-danger">${newStock}</span> units`;
            } else {
                warningMessage.style.display = 'none';

                // Color code the result
                if (newStock <= @Model.LowStockThreshold) {
                    previewResult.innerHTML = `New stock will be: <strong class="text-warning">${newStock}</strong> units`;
                    if (newStock <= 0) {
                        previewResult.innerHTML = `New stock will be: <strong class="text-danger">${newStock}</strong> units`;
                    }
                }
            }
        }

        // Update preview on any change
        quantityInput.addEventListener('input', updatePreview);
        document.querySelectorAll('input[name="actionType"]').forEach(radio => {
            radio.addEventListener('change', updatePreview);
        });

        // Initial preview
        updatePreview();

        // Form validation
        document.getElementById('adjustForm').addEventListener('submit', function(e) {
            const actionType = document.querySelector('input[name="actionType"]:checked').value;
            const quantity = parseInt(quantityInput.value) || 0;

            // Validate quantity
            if (quantity <= 0) {
                e.preventDefault();
                alert('Quantity must be greater than 0');
                return false;
            }

            // Validate remove action
            if (actionType === 'remove' && quantity > currentStock) {
                e.preventDefault();
                alert(`Cannot remove ${quantity} units. Only ${currentStock} units available.`);
                return false;
            }

            // Validate set action
            if (actionType === 'set' && quantity < 0) {
                e.preventDefault();
                alert('Stock cannot be negative');
                return false;
            }

            // Disable button during submission
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-1"></i>Processing...';
            submitBtn.disabled = true;
        });
    </script>
}