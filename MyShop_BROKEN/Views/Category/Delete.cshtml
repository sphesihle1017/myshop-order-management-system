@model MyShop.Models.Category
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Delete Category
                    </h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.HasProducts)
                    {
                        <div class="alert alert-warning">
                            <h5 class="alert-heading">
                                <i class="bi bi-exclamation-octagon-fill me-2"></i>
                                Cannot Delete Category
                            </h5>
                            <p class="mb-0">
                                This category has <strong>@ViewBag.ProductCount product(s)</strong> assigned to it.
                                You must reassign or delete these products before deleting the category.
                            </p>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Back to List
                            </a>
                            <a asp-action="CategoryProducts" asp-route-id="@Model.CategoryId"
                               class="btn btn-primary">
                                <i class="bi bi-box me-1"></i>View Products
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <h5 class="alert-heading">
                                <i class="bi bi-exclamation-octagon-fill me-2"></i>
                                Warning: This action cannot be undone!
                            </h5>
                            <p class="mb-0">Are you sure you want to delete this category?</p>
                        </div>

                        <!-- Category Details -->
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title text-danger">Category Details</h5>
                                <hr />

                                <dl class="row">
                                    <dt class="col-sm-4">ID:</dt>
                                    <dd class="col-sm-8">@Model.CategoryId</dd>

                                    <dt class="col-sm-4">Name:</dt>
                                    <dd class="col-sm-8">@Model.CategoryName</dd>

                                    <dt class="col-sm-4">Products:</dt>
                                    <dd class="col-sm-8">
                                        <span class="badge bg-success">0 products</span>
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <!-- Delete Form -->
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="CategoryId" />

                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>Back to List
                                </a>
                                <button type="submit" class="btn btn-danger"
                                        onclick="return confirmDelete()">
                                    <i class="bi bi-trash-fill me-1"></i>Confirm Delete
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm('⚠️ Are you absolutely sure you want to delete this category?\n\nThis action will:\n• Permanently delete the category\n• This cannot be undone!');
        }

        // Double confirmation on form submit
        document.querySelector('form')?.addEventListener('submit', function(e) {
            const btn = this.querySelector('button[type="submit"]');
            if (btn) {
                btn.innerHTML = '<i class="bi bi-trash-fill me-1"></i>Deleting...';
                btn.disabled = true;
            }
        });
    </script>
}