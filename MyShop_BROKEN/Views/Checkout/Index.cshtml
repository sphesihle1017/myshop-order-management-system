@model MyShop.Models.Checkout
@{
    ViewData["Title"] = "Checkout";
}

<style>
    .checkout-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .checkout-step {
        margin-bottom: 2rem;
    }

    .step-indicator {
        display: flex;
        justify-content: space-between;
        margin-bottom: 2rem;
        position: relative;
    }

    .step {
        text-align: center;
        position: relative;
        z-index: 1;
        flex: 1;
    }

    .step-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #e9ecef;
        color: #6c757d;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 10px;
        font-weight: bold;
        border: 3px solid #e9ecef;
    }

    .step.active .step-circle {
        background-color: #0d6efd;
        color: white;
        border-color: #0d6efd;
    }

    .step.completed .step-circle {
        background-color: #198754;
        color: white;
        border-color: #198754;
    }

    .step-line {
        position: absolute;
        top: 20px;
        left: 10%;
        right: 10%;
        height: 3px;
        background-color: #e9ecef;
        z-index: 0;
    }

    .checkout-card {
        border: 1px solid #dee2e6;
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 20px;
    }

    .checkout-card-header {
        background-color: #f8f9fa;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #dee2e6;
    }

    .checkout-card-body {
        padding: 1.5rem;
    }

    .order-summary-item {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 0;
        border-bottom: 1px solid #f8f9fa;
    }

        .order-summary-item:last-child {
            border-bottom: none;
        }

    .order-total {
        font-size: 1.25rem;
        font-weight: bold;
        color: #198754;
    }

    .payment-method {
        border: 1px solid #dee2e6;
        border-radius: 5px;
        padding: 1rem;
        margin-bottom: 1rem;
        cursor: pointer;
        transition: all 0.3s;
    }

        .payment-method:hover {
            border-color: #0d6efd;
            background-color: #f8f9fa;
        }

        .payment-method.selected {
            border-color: #0d6efd;
            background-color: #e7f1ff;
        }

        .payment-method input[type="radio"] {
            margin-right: 10px;
        }

    .credit-card-input {
        transition: all 0.3s;
    }

    .cart-item {
        display: flex;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px solid #f8f9fa;
    }

        .cart-item:last-child {
            border-bottom: none;
        }

    .cart-item-image {
        width: 80px;
        height: 80px;
        object-fit: contain;
        margin-right: 1rem;
    }

    .cart-item-details {
        flex: 1;
    }

    .required::after {
        content: " *";
        color: #dc3545;
    }

    .secure-badge {
        background-color: #198754;
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.875rem;
        display: inline-flex;
        align-items: center;
        margin-left: 10px;
    }

        .secure-badge i {
            margin-right: 5px;
        }
</style>

<div class="checkout-container">
    <!-- Progress Steps -->
    <div class="step-indicator">
        <div class="step active">
            <div class="step-circle">1</div>
            <div class="step-label">Information</div>
        </div>
        <div class="step">
            <div class="step-circle">2</div>
            <div class="step-label">Shipping</div>
        </div>
        <div class="step">
            <div class="step-circle">3</div>
            <div class="step-label">Payment</div>
        </div>
        <div class="step">
            <div class="step-circle">4</div>
            <div class="step-label">Confirmation</div>
        </div>
        <div class="step-line"></div>
    </div>

    <div class="row">
        <!-- Left Column: Checkout Form -->
        <div class="col-lg-8">
            <form asp-action="Index" id="checkoutForm" method="post">
                @Html.AntiForgeryToken()

                <!-- Contact Information -->
                <div class="checkout-card checkout-step" id="contactInfo">
                    <div class="checkout-card-header">
                        <h5 class="mb-0"><i class="bi bi-person me-2"></i>Contact Information</h5>
                    </div>
                    <div class="checkout-card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label required">First Name</label>
                                <input asp-for="FirstName" class="form-control" required>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label required">Last Name</label>
                                <input asp-for="LastName" class="form-control" required>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label required">Email Address</label>
                                <input asp-for="Email" type="email" class="form-control" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label required">Phone Number</label>
                                <input asp-for="Phone" class="form-control" required>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Shipping Address -->
                <div class="checkout-card checkout-step" id="shippingInfo">
                    <div class="checkout-card-header">
                        <h5 class="mb-0"><i class="bi bi-truck me-2"></i>Shipping Address</h5>
                    </div>
                    <div class="checkout-card-body">
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label required">Street Address</label>
                            <input asp-for="Address" class="form-control" required>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="City" class="form-label required">City</label>
                                <input asp-for="City" class="form-control" required>
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="PostalCode" class="form-label required">Postal Code</label>
                                <input asp-for="PostalCode" class="form-control" required>
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Country" class="form-label required">Country</label>
                            <select asp-for="Country" class="form-select" required>
                                <option value="South Africa">South Africa</option>
                                <option value="United States">United States</option>
                                <option value="United Kingdom">United Kingdom</option>
                                <option value="Canada">Canada</option>
                                <option value="Australia">Australia</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Payment Method -->
                <div class="checkout-card checkout-step" id="paymentInfo">
                    <div class="checkout-card-header">
                        <h5 class="mb-0"><i class="bi bi-credit-card me-2"></i>Payment Method</h5>
                        <span class="secure-badge">
                            <i class="bi bi-shield-check"></i> Secure Payment
                        </span>
                    </div>
                    <div class="checkout-card-body">
                        <!-- Payment Method Selection -->
                        <div class="mb-4">
                            <div class="payment-method" onclick="selectPaymentMethod('credit-card')">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="PaymentMethod"
                                           id="creditCard" value="Credit Card" checked>
                                    <label class="form-check-label" for="creditCard">
                                        <strong>Credit/Debit Card</strong>
                                    </label>
                                    <div class="mt-2">
                                        <i class="bi bi-credit-card me-2"></i>
                                        <i class="bi bi-paypal me-2"></i>
                                        <i class="bi bi-currency-dollar"></i>
                                    </div>
                                </div>
                            </div>

                            <div class="payment-method" onclick="selectPaymentMethod('cash')">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="PaymentMethod"
                                           id="cashOnDelivery" value="Cash on Delivery">
                                    <label class="form-check-label" for="cashOnDelivery">
                                        <strong>Cash on Delivery</strong>
                                    </label>
                                    <div class="mt-2 text-muted">
                                        Pay when you receive your order
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Credit Card Details (shown by default) -->
                        <div id="creditCardDetails">
                            <div class="mb-3">
                                <label asp-for="CardNumber" class="form-label required">Card Number</label>
                                <div class="input-group">
                                    <input asp-for="CardNumber" class="form-control"
                                           placeholder="1234 5678 9012 3456">
                                    <span class="input-group-text">
                                        <i class="bi bi-credit-card"></i>
                                    </span>
                                </div>
                                <span asp-validation-for="CardNumber" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label asp-for="ExpiryMonth" class="form-label required">Expiry Month</label>
                                    <select asp-for="ExpiryMonth" class="form-select">
                                        <option value="">Month</option>
                                        @for (int i = 1; i <= 12; i++)
                                        {
                                            <option value="@i.ToString("00")">@i.ToString("00")</option>
                                        }
                                    </select>
                                    <span asp-validation-for="ExpiryMonth" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label asp-for="ExpiryYear" class="form-label required">Expiry Year</label>
                                    <select asp-for="ExpiryYear" class="form-select">
                                        <option value="">Year</option>
                                        @for (int i = DateTime.Now.Year; i <= DateTime.Now.Year + 10; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                    <span asp-validation-for="ExpiryYear" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label asp-for="CVV" class="form-label required">CVV</label>
                                    <div class="input-group">
                                        <input asp-for="CVV" class="form-control" placeholder="123">
                                        <span class="input-group-text">
                                            <i class="bi bi-shield"></i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="CVV" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Terms and Conditions -->
                        <div class="form-check mb-3">
                            <input asp-for="AgreeToTerms" class="form-check-input" type="checkbox" required>
                            <label asp-for="AgreeToTerms" class="form-check-label">
                                I agree to the <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">Terms and Conditions</a>
                            </label>
                            <span asp-validation-for="AgreeToTerms" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="SaveInfo" class="form-check-input" type="checkbox">
                            <label asp-for="SaveInfo" class="form-check-label">
                                Save this information for faster checkout next time
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Hidden fields for order totals -->
                <input type="hidden" asp-for="Subtotal" id="subtotal" />
                <input type="hidden" asp-for="Tax" id="tax" />
                <input type="hidden" asp-for="Shipping" id="shipping" />
                <input type="hidden" asp-for="Total" id="total" />
                <input type="hidden" id="cartItemsJson" name="cartItemsJson" />
            </form>
        </div>

        <!-- Right Column: Order Summary -->
        <div class="col-lg-4">
            <div class="checkout-card sticky-top" style="top: 20px;">
                <div class="checkout-card-header">
                    <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Order Summary</h5>
                </div>
                <div class="checkout-card-body">
                    <!-- Cart Items -->
                    <div id="orderItems">
                        <div class="text-center py-3">
                            <div class="spinner-border text-primary spinner-border-sm" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2 small">Loading order items...</p>
                        </div>
                    </div>

                    <!-- Order Totals -->
                    <div class="mt-4 pt-3 border-top">
                        <div class="order-summary-item">
                            <span>Subtotal</span>
                            <span id="displaySubtotal">R 0.00</span>
                        </div>
                        <div class="order-summary-item">
                            <span>Tax (15%)</span>
                            <span id="displayTax">R 0.00</span>
                        </div>
                        <div class="order-summary-item">
                            <span>Shipping</span>
                            <span id="displayShipping">R 0.00</span>
                        </div>
                        <div class="order-summary-item order-total">
                            <span>Total</span>
                            <span id="displayTotal">R 0.00</span>
                        </div>
                    </div>

                    <!-- Complete Order Button -->
                    <div class="mt-4">
                        <button type="submit" form="checkoutForm" class="btn btn-primary btn-lg w-100 py-3" id="completeOrderBtn">
                            <i class="bi bi-lock me-2"></i>Complete Order
                        </button>
                        <p class="text-center mt-2 small text-muted">
                            <i class="bi bi-shield-check me-1"></i>Secure SSL Encryption
                        </p>
                    </div>

                    <!-- Continue Shopping Link -->
                    <div class="text-center mt-3">
                        <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                            <i class="bi bi-arrow-left me-1"></i>Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Terms and Conditions Modal -->
<div class="modal fade" id="termsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Terms and Conditions</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h6>1. Order Acceptance</h6>
                <p>Your receipt of an electronic or other form of order confirmation does not signify our acceptance of your order, nor does it constitute confirmation of our offer to sell.</p>

                <h6>2. Pricing</h6>
                <p>Prices are subject to change without notice. We reserve the right to modify or discontinue products without notice.</p>

                <h6>3. Payment</h6>
                <p>We accept various methods of payment. All payments are processed securely.</p>

                <h6>4. Shipping</h6>
                <p>We ship to most locations. Shipping costs and delivery times vary by location.</p>

                <h6>5. Returns</h6>
                <p>We offer a 30-day return policy for most items.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            loadOrderSummary();
            setupFormValidation();
            setupPaymentMethodToggle();
        });

        function loadOrderSummary() {
            const cart = cartManager.getCart();

            if (cart.length === 0) {
                // Redirect to cart if empty
                window.location.href = '/Cart';
                return;
            }

            // Convert cart to required format
            const cartItems = cart.map(item => ({
                ProductId: item.productId,
                ProductName: item.productName,
                Price: item.price,
                Quantity: item.quantity
            }));

            // Send to server to calculate totals
            fetch('/Checkout/CalculateTotals', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(cartItems)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Update displayed totals
                    document.getElementById('displaySubtotal').textContent = 'R ' + data.subtotal;
                    document.getElementById('displayTax').textContent = 'R ' + data.tax;
                    document.getElementById('displayShipping').textContent = 'R ' + data.shipping;
                    document.getElementById('displayTotal').textContent = 'R ' + data.total;

                    // Update hidden fields
                    document.getElementById('subtotal').value = data.subtotal;
                    document.getElementById('tax').value = data.tax;
                    document.getElementById('shipping').value = data.shipping;
                    document.getElementById('total').value = data.total;

                    // Update order items display
                    displayOrderItems(cart);

                    // Save cart items to hidden field
                    document.getElementById('cartItemsJson').value = JSON.stringify(cartItems);
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }

        function displayOrderItems(cart) {
            const orderItemsContainer = document.getElementById('orderItems');
            let html = '';

            cart.forEach(item => {
                html += `
                    <div class="cart-item">
                        <div class="cart-item-details">
                            <div class="d-flex justify-content-between">
                                <strong>${item.productName}</strong>
                                <span>R ${(item.price * item.quantity).toFixed(2)}</span>
                            </div>
                            <div class="d-flex justify-content-between text-muted small">
                                <span>Qty: ${item.quantity}</span>
                                <span>R ${item.price.toFixed(2)} each</span>
                            </div>
                        </div>
                    </div>
                `;
            });

            orderItemsContainer.innerHTML = html;
        }

        function setupFormValidation() {
            const form = document.getElementById('checkoutForm');
            const completeOrderBtn = document.getElementById('completeOrderBtn');

            form.addEventListener('submit', function(e) {
                // Check if cart is empty
                const cart = cartManager.getCart();
                if (cart.length === 0) {
                    e.preventDefault();
                    alert('Your cart is empty. Please add items to your cart before checking out.');
                    window.location.href = '/Cart';
                    return;
                }

                // Check terms and conditions
                const agreeToTerms = document.getElementById('AgreeToTerms');
                if (!agreeToTerms.checked) {
                    e.preventDefault();
                    alert('Please agree to the Terms and Conditions to proceed.');
                    agreeToTerms.focus();
                    return;
                }

                // Disable button and show loading
                completeOrderBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Processing...';
                completeOrderBtn.disabled = true;
            });
        }

        function setupPaymentMethodToggle() {
            const creditCardRadio = document.getElementById('creditCard');
            const cashOnDeliveryRadio = document.getElementById('cashOnDelivery');
            const creditCardDetails = document.getElementById('creditCardDetails');

            // Hide credit card details if cash on delivery is selected
            cashOnDeliveryRadio.addEventListener('change', function() {
                if (this.checked) {
                    creditCardDetails.style.display = 'none';
                    // Make credit card fields not required
                    document.querySelectorAll('#creditCardDetails input, #creditCardDetails select').forEach(field => {
                        field.required = false;
                    });
                }
            });

            creditCardRadio.addEventListener('change', function() {
                if (this.checked) {
                    creditCardDetails.style.display = 'block';
                    // Make credit card fields required
                    document.querySelectorAll('#creditCardDetails input, #creditCardDetails select').forEach(field => {
                        field.required = true;
                    });
                }
            });
        }

        function selectPaymentMethod(method) {
            const paymentMethods = document.querySelectorAll('.payment-method');
            paymentMethods.forEach(pm => pm.classList.remove('selected'));

            if (method === 'credit-card') {
                document.getElementById('creditCard').checked = true;
                document.querySelector('.payment-method').classList.add('selected');
                document.getElementById('creditCardDetails').style.display = 'block';
                // Make credit card fields required
                document.querySelectorAll('#creditCardDetails input, #creditCardDetails select').forEach(field => {
                    field.required = true;
                });
            } else if (method === 'cash') {
                document.getElementById('cashOnDelivery').checked = true;
                document.querySelectorAll('.payment-method')[1].classList.add('selected');
                document.getElementById('creditCardDetails').style.display = 'none';
                // Make credit card fields not required
                document.querySelectorAll('#creditCardDetails input, #creditCardDetails select').forEach(field => {
                    field.required = false;
                });
            }
        }

        // Format card number as user types
        document.getElementById('CardNumber')?.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
            let formatted = '';

            for (let i = 0; i < value.length; i++) {
                if (i > 0 && i % 4 === 0) {
                    formatted += ' ';
                }
                formatted += value[i];
            }

            e.target.value = formatted.substring(0, 19); // Max 16 digits + 3 spaces
        });

        // Format CVV as user types
        document.getElementById('CVV')?.addEventListener('input', function(e) {
            e.target.value = e.target.value.replace(/[^0-9]/g, '').substring(0, 4);
        });
    </script>
}